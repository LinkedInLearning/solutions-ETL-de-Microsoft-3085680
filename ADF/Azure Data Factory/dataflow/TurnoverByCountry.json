{
	"name": "TurnoverByCountry",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "SourceDatasetCountry",
						"type": "DatasetReference"
					},
					"name": "SrcCountry"
				},
				{
					"dataset": {
						"referenceName": "SourceDatasetTerritory",
						"type": "DatasetReference"
					},
					"name": "SrcTerritory"
				}
			],
			"sinks": [
				{
					"linkedService": {
						"referenceName": "SQL_Dw",
						"type": "LinkedServiceReference"
					},
					"name": "DestTurnoverByCountry"
				}
			],
			"transformations": [
				{
					"name": "JoinCountryTerritory"
				},
				{
					"name": "SelectColumns"
				},
				{
					"name": "aggregate1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Column_1 as string,",
				"          Column_2 as string,",
				"          Column_3 as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SrcCountry",
				"source(output(",
				"          TerritoryId as short,",
				"          TerritoryName as string,",
				"          CountryCode as string,",
				"          Turnover as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SrcTerritory",
				"SelectColumns, SrcTerritory join(IsoCode == CountryCode,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinCountryTerritory",
				"SrcCountry select(mapColumn(",
				"          IsoCode = Column_1,",
				"          CountryName = Column_2,",
				"          UpdateDate = Column_3",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectColumns",
				"JoinCountryTerritory aggregate(groupBy(CountryName),",
				"     NbTerritory = countDistinct(TerritoryId),",
				"          Turnover = sum(toDecimal(Turnover,17,0,'###,##'))) ~> aggregate1",
				"aggregate1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     store: 'sqlserver',",
				"     schemaName: 'dbo',",
				"     tableName: 'TurnoverByCountry3',",
				"     insertable: true,",
				"     updateable: false,",
				"     deletable: false,",
				"     upsertable: false,",
				"     recreate: true,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> DestTurnoverByCountry"
			]
		}
	}
}